{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "outDir": "./build/",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "strict": true,
    "target": "es5",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ]
}